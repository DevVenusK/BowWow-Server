# BowWow Server - Environment Variables Template
# Copy this file to .env and fill in the actual values

# ==============================================
# Database Configuration
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/bowwow
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=bowwow

# ==============================================
# Redis Configuration
# ==============================================
# TODO: [REDIS-005] Redis URL configuration for caching
REDIS_URL=redis://localhost:6379

# ==============================================
# Service Ports Configuration
# ==============================================
GATEWAY_PORT=8000
USER_SERVICE_PORT=8001
LOCATION_SERVICE_PORT=8002
SIGNAL_SERVICE_PORT=8003
PUSH_SERVICE_PORT=8004
ANALYTICS_SERVICE_PORT=8005

# ==============================================
# Service URLs (for internal communication)
# ==============================================
USER_SERVICE_URL=http://localhost:8001
LOCATION_SERVICE_URL=http://localhost:8002
SIGNAL_SERVICE_URL=http://localhost:8003
PUSH_SERVICE_URL=http://localhost:8004
ANALYTICS_SERVICE_URL=http://localhost:8005

# ==============================================
# APNS (Apple Push Notification Service) Configuration
# ==============================================
# TODO: [APNS-005] Set these values with actual APNS credentials
APNS_KEY_ID=your_key_id_here
APNS_TEAM_ID=your_team_id_here
APNS_KEY_PATH=/path/to/AuthKey_XXXXX.p8
APNS_TOPIC=com.bowwow.app

# ==============================================
# JWT Authentication Configuration
# ==============================================
# TODO: [AUTH-005] Generate a secure JWT secret (256-bit recommended)
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_32_characters_long

# ==============================================
# API Key Configuration (for inter-service communication)
# ==============================================
# TODO: [AUTH-006] Generate secure API keys for service-to-service authentication
API_KEY=your_secure_api_key_for_internal_services

# ==============================================
# Location Encryption Configuration
# ==============================================
# TODO: [CRYPTO-005] Set a 32-byte base64-encoded encryption key
LOCATION_ENCRYPTION_KEY=your_32_byte_base64_encoded_encryption_key_here

# ==============================================
# Logging and Monitoring Configuration
# ==============================================
# TODO: [MONITOR-001] Configure log levels and external monitoring
LOG_LEVEL=info

# ==============================================
# External Services Configuration
# ==============================================
# TODO: [EXTERNAL-001] Configure external monitoring services
# PROMETHEUS_URL=http://localhost:9090
# GRAFANA_URL=http://localhost:3000

# ==============================================
# Development/Production Environment
# ==============================================
ENVIRONMENT=development