// Release Configuration for BowWow iOS App

// Build Settings
SWIFT_ACTIVE_COMPILATION_CONDITIONS = $(inherited) RELEASE
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) RELEASE=1
SWIFT_OPTIMIZATION_LEVEL = -O
SWIFT_COMPILATION_MODE = wholemodule
ENABLE_TESTABILITY = NO

// Code Signing
CODE_SIGN_STYLE = Manual
CODE_SIGN_IDENTITY = iPhone Distribution
PROVISIONING_PROFILE_SPECIFIER = BowWow Distribution Profile

// Bundle Configuration
PRODUCT_BUNDLE_IDENTIFIER = com.bowwow.app
PRODUCT_NAME = BowWow
DISPLAY_NAME = BowWow

// API Configuration
API_BASE_URL = https://api.bowwow.com/api

// Development Team (update with your team ID)
DEVELOPMENT_TEAM = YOUR_TEAM_ID_HERE

// Release Optimizations
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
ONLY_ACTIVE_ARCH = NO
ENABLE_NS_ASSERTIONS = NO
ENABLE_STRICT_OBJC_MSGSEND = YES
MTL_ENABLE_DEBUG_INFO = NO
GCC_C_LANGUAGE_STANDARD = gnu11
GCC_NO_COMMON_BLOCKS = YES
GCC_WARN_64_TO_32_BIT_CONVERSION = YES
GCC_WARN_ABOUT_RETURN_TYPE = YES_ERROR
GCC_WARN_UNDECLARED_SELECTOR = YES
GCC_WARN_UNINITIALIZED_AUTOS = YES_AGGRESSIVE
GCC_WARN_UNUSED_FUNCTION = YES
GCC_WARN_UNUSED_VARIABLE = YES

// Swift Compiler
SWIFT_VERSION = 5.9

// Deployment
IPHONEOS_DEPLOYMENT_TARGET = 18.0
TARGETED_DEVICE_FAMILY = 1,2

// Other Linker Flags
OTHER_LDFLAGS = $(inherited)

// Bitcode
ENABLE_BITCODE = NO

// App Store Distribution
VALIDATE_PRODUCT = YES
COPY_PHASE_STRIP = NO
STRIP_INSTALLED_PRODUCT = YES

// Security
GCC_GENERATE_DEBUGGING_SYMBOLS = YES